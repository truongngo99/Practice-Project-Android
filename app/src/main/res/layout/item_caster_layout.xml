<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_caster"
        android:layout_width="90dp"
        android:layout_height="90dp"

        app:shapeAppearanceOverlay="@style/border_radius_caster"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_name_caster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img_caster"
        app:layout_constraintStart_toStartOf="@id/img_caster"
        app:layout_constraintEnd_toEndOf="@id/img_caster"/>

</androidx.constraintlayout.widget.ConstraintLayout>