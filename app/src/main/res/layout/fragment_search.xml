<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.search.SearchFragment">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginVertical="@dimen/layout_margin_8dp"
        android:layout_marginHorizontal="@dimen/layout_margin_8dp"
        android:background="@drawable/custom_edt"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="10dp"
        android:hint="@string/search_movie"
        android:inputType="text"

        android:imeOptions="actionDone"
        />
    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/edt_search"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_search"
            android:paddingHorizontal="@dimen/layout_padding_16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/edt_search"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progress_circular"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>