<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PracticeProjectAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_splash</item>
        <item name="colorPrimaryVariant">@color/background_splash</item>
        <item name="colorOnPrimary">@color/background_splash</item>
<!--        <item name="android:background">@color/background_splash</item>-->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_splash</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Ratingbar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>
    <style name="TransparentTitleAppBar" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/background_splash</item>
        <item name="colorPrimaryDark">@color/color_edt</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/background_splash</item>
        <item name="colorAccent">@color/color_edt</item>

    </style>

</resources>